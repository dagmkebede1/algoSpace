extends base
append css 
  link(rel='stylesheet' href='/css/profile.css')
block content 
  section.main
    .main-container
      .main-item-profile
        .box
          h2 My Profile
        .img-name
          if currentUser.photo
            img(src=`/img/users/${currentUser.photo}` alt='profile picture')
            p.username
              span.name= `${currentUser.firstname} ${currentUser.lastname}`
              span.position= `${currentUser.role}`
          else 
            img(src='/img/default.png' alt='profile picture')
            p.username
              span.name= `${currentUser.firstname} ${currentUser.lastname}`
              span.position= `${currentUser.role}`
        .info
          p.info-item
            svg(xmlns='http://www.w3.org/2000/svg' fill='none' viewBox='0 0 24 24' stroke='currentColor' stroke-width='2')
              path(stroke-linecap='round' stroke-linejoin='round' d='M16 12a4 4 0 10-8 0 4 4 0 008 0zm0 0v1.5a2.5 2.5 0 005 0V12a9 9 0 10-9 9m4.5-1.206a8.959 8.959 0 01-4.5 1.207')
            = `${currentUser.email}`

          p.info-item
            svg(fill='none' stroke='currentColor' viewBox='0 0 24 24' xmlns='http://www.w3.org/2000/svg')
              path(strokelinecap='round' strokelinejoin='round' strokewidth='{2}' d='M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10')
            = `${currentUser.course}`

          p.info-item
            svg(xmlns='http://www.w3.org/2000/svg' fill='none' viewBox='0 0 24 24' stroke='currentColor' stroke-width='2')
              path(stroke-linecap='round' stroke-linejoin='round' d='M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z')
            = `${currentUser.phone}`
          if currentUser.gender === 'male'
            p.info-item
              svg.ionicon(xmlns='http://www.w3.org/2000/svg' viewBox='0 0 512 512')
                title Male
                circle(cx='216' cy='296' r='152' fill='none' stroke='currentColor' stroke-linecap='round' stroke-linejoin='round' stroke-width='32')
                path(fill='none' stroke='currentColor' stroke-linecap='round' stroke-linejoin='round' stroke-width='32' d='M448 160V64h-96M324 188L448 64')
              = `${currentUser.gender}`
          else
            p.info-item
              svg.ionicon(xmlns='http://www.w3.org/2000/svg' viewBox='0 0 512 512')
                title Female
                circle(cx='256' cy='184' r='152' fill='none' stroke='currentColor' stroke-linecap='round' stroke-linejoin='round' stroke-width='32')
                path(fill='none' stroke='currentColor' stroke-linecap='round' stroke-linejoin='round' stroke-width='32' d='M256 336v144M314 416H198')
              = `${currentUser.gender}`

        .edit
          a.edit-link(href='/my/settings')
            svg.edit-icon(xmlns='http://www.w3.org/2000/svg' fill='none' viewBox='0 0 24 24' stroke='currentColor' stroke-width='2')
              path(stroke-linecap='round' stroke-linejoin='round' d='M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z')
            | Edit


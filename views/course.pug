extends base
append css 
    link(rel='stylesheet', href='/css/card.css')
block content
    .user-course
        h2 Your Current Courses
            for item in currentUser.course 
                p.list=` ${item}`
            else 
                p.no-course You don't have any Course yet!
            
             
    .available-div
        h2 Available Courses
    .card-container
        each course in allCourse
            .card
                .card-side.front
                    .img
                        .bg-blend
                        img(src="/img/web.jpg", alt="")
                    p.title= `${course.title}`
                    .course-about
                        p Takes 3 Months
                        .line
                        p Great Resourse
                        .line
                        p Phisical and Online Class
                    .mobile-part 
                        p.price Only
                        p.birr
                            = `${course.price}` 
                            span ETB
                        a.enrol(href= `/${course._id}`) Enrol Now !
                        a.beinst(href='#') Be Instructor 

                    .instructor
                        svg.w-6.h-6(fill='none' stroke='currentColor' viewBox='0 0 24 24' xmlns='http://www.w3.org/2000/svg')
                            path(stroke-linecap='round' stroke-linejoin='round' stroke-width='2' d='M5.636 18.364a9 9 0 010-12.728m12.728 0a9 9 0 010 12.728m-9.9-2.829a5 5 0 010-7.07m7.072 0a5 5 0 010 7.07M13 12a1 1 0 11-2 0 1 1 0 012 0z')
                        p.inst by University Lecturer
                .card-side.back
                    if currentUser.role === 'admin'
                        .option 
                            a.edit#editCourse(href="")
                                svg.h-6.w-6(xmlns='http://www.w3.org/2000/svg' fill='none' viewBox='0 0 24 24' stroke='currentColor' stroke-width='2')
                                    path(stroke-linecap='round' stroke-linejoin='round' d='M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z')
                            a.delete.deleteCourse(href= `/course/${course._id}`) 
                                svg.h-6.w-6(xmlns='http://www.w3.org/2000/svg' fill='none' viewBox='0 0 24 24' stroke='currentColor' stroke-width='2')
                                    path(stroke-linecap='round' stroke-linejoin='round' d='M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16') 
                    p.price Only
                    p.birr
                        = `${course.price}` 
                        span ETB
                    a.enrol(href= `/course/${course._id}`) Enrol Now !
                    a.beinst(href= `/course-inst/${course._id}`) Be Instructor
        if currentUser.role === 'admin'
            a.main-btn.center.add-card(href="") 
                svg.plus(xmlns='http://www.w3.org/2000/svg' fill='none' viewBox='0 0 24 24' stroke='currentColor' stroke-width='2')
                    path(stroke-linecap='round' stroke-linejoin='round' d='M12 4v16m8-8H4')